---
# Clang-tidy configuration for Subsetix Kokkos
# Modern C++20 checks with reasonable defaults

InheritParentConfig: false

# Checks enabled
Checks: >
  -*,
  bugprone-*,
  -bugprone-easily-swappable-parameters,
  -bugprone-narrowing-conversions,
  -bugprone-macro-parentheses,
  -bugprone-signed-char-misuse,
  -bugprone-unhandled-self-assignment,
  cert-*,
  -cert-err58-cpp,
  -cert-dcl03-cpp,
  -cert-dcl21-cpp,
  clang-analyzer-*,
  clang-analyzer-core.*, clang-analyzer-cplusplus.*, clang-analyzer-deadcode.*, clang-analyzer-security.*, clang-analyzer-unix.*,
  cppcoreguidelines-*,
  -cppcoreguidelines-avoid-magic-numbers,
  -cppcoreguidelines-pro-bounds-array-to-pointer-decay,
  -cppcoreguidelines-pro-bounds-pointer-arithmetic,
  -cppcoreguidelines-avoid-c-arrays,
  -cppcoreguidelines-owning-memory,
  -cppcoreguidelines-special-member-functions,
  -cppcoreguidelines-pro-type-reinterpret-cast,
  -cppcoreguidelines-pro-type-vararg,
  misc-*,
  -misc-non-private-member-variables-in-classes,
  -misc-no-recursion,
  modernize-*,
  -modernize-use-trailing-return-type,
  -modernize-avoid-c-arrays,
  performance-*,
  -performance-move-const-arg,
  -performance-noexcept-move-constructor,
  portability-*,
  concurrency-*,
  readability-*,
  -readability-magic-numbers,
  -readability-identifier-length,
  -readability-function-cognitive-complexity,
  -readability-function-size,
  -readability-identifier-naming,
  # Memory safety checks
  -bugprone-unused-return-value,
  cert-dcl54-cpp, # Check for forward declarations with different default args
  cert-dcl59-cpp, # Check for usage of std::move on const rvalues

# Check options
CheckOptions:
  # Modernize
  - key: modernize-use-nullptr.NullMacros
    value: 'NULL'
  - key: modernize-use-nullptr.IgnoreMacros
    value: '1'

  # Performance
  - key: performance-unnecessary-value-param.IncludeStyle
    value: 'llvm'
